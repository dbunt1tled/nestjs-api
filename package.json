{
  "name": "nestjs-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:cli": "node  -r tsconfig-paths/register -r ts-node/register src/main-cli.ts",
    "start:cli:debug": "node  --inspect-brk -r tsconfig-paths/register -r ts-node/register src/main-cli.ts",
    "start:cli:build": "nest build && node  -r tsconfig-paths/register -r ts-node/register src/main-cli.ts",
    "start:cli:build:debug": "nest build && node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/main-cli.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:migrate": "prisma db push",
    "db:deploy": "prisma generate",
    "db:rollback": "prisma migrate reset -f",
    "db:migration:create": "prisma migrate dev --name "
  },
  "dependencies": {
    "@nest-lab/fastify-multer": "^1.2.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/adapter-pg": "^5.19.1",
    "@prisma/client": "^5.19.1",
    "@types/qs": "^6.9.15",
    "argon2": "^0.41.1",
    "axios": "^1.7.7",
    "bson": "^6.8.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "handlebars": "^4.7.8",
    "jsonapi-serializer": "^3.6.9",
    "luxon": "^3.5.0",
    "nest-commander": "^3.15.0",
    "nodemailer": "^6.9.15",
    "pg": "^8.12.0",
    "qs": "^6.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jsonapi-serializer": "^3.6.8",
    "@types/luxon": "^3.4.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
