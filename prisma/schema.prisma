generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @db.Uuid
  firstName String
  lastName  String
  email     String
  phone     String
  session   String?
  hash      String?
  status    Int       @default(0)
  confirmAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  roles     Role[]
  File      File[]

  @@unique([email])
  @@unique([phone])
  @@index([status], type: Hash)
  @@map("users")
}

model Role {
  userId    String   @db.Uuid
  name      String
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])

  @@unique([userId, name])
  @@map("roles")
}

model File {
  id        String   @id @db.Uuid
  userId    String?  @db.Uuid
  ownerId   String?  @db.Uuid
  path      String
  type      Int
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])

  @@unique([path])
  @@index([type], type: Hash)
  @@map("files")
}
